{
  "name": "ppc-api",
  "version": "1.0.0",
  "description": "Production and process control graphql api server",
  "main": "index.js",
  "scripts": {
    "dev": "nodemon src/index.js --exec babel-node",
    "start": "node src/index.js --exec babel-node",
    "build": "rimraf ./dist && babel src -d dist && copyfiles -u 1 src/**/*.graphql dist",
    "serve": "node dist/index.js"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@babel/runtime": "^7.2.0",
    "apollo-server-express": "^2.0.5",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^6.2.0",
    "express": "^4.16.4",
    "glob": "^7.1.3",
    "graphql": "^14.0.2",
    "graphql-middleware": "^2.0.2",
    "graphql-shield": "^4.1.1",
    "graphql-tools": "^4.0.3",
    "jsonwebtoken": "^8.4.0",
    "merge-graphql-schemas": "^1.5.8",
    "moment": "^2.22.2",
    "mongoose": "^5.7.5",
    "nodemailer": "^4.7.0",
    "shortid": "^2.2.14"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.0",
    "@babel/core": "^7.2.0",
    "@babel/node": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/preset-env": "^7.2.0",
    "copyfiles": "^2.1.0",
    "eslint": "^5.10.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "nodemon": "^1.18.7",
    "rimraf": "^2.6.2"
  },
  "nodemonConfig": {
    "ext": "js,json,graphql,gql"
  }
}
